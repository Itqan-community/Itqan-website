---
const { currentLang } = Astro.props;
const otherLang = currentLang === 'ar' ? 'en' : 'ar';
const otherLangLabel = otherLang === 'ar' ? 'العربية' : 'English';
const currentPath = Astro.url.pathname.replace(/^\/(en|ar)/, ''); // Remove current lang prefix

---

<a href={`/${otherLang}${currentPath || '/'}`} onclick="localStorage.setItem('lang', otherLang);">
  {otherLangLabel}
</a>