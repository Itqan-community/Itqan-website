---
import LanguageSwitcher from '../components/LanguageSwitcher.astro';
import { useTranslations } from '../i18n/utils';

const { lang, path } = Astro.props;
const t = useTranslations(lang);
---

<nav role="navigation" class="navbar">
  <a href={`/${lang}`} class="logo">
    <img 
      src="https://framerusercontent.com/images/q9CMuIWB9ZOelP0bKqU7M2MIyi4.svg" 
      alt="إتقان" 
      width="120" 
      height="40"
    />
  </a>
  
  <ul class="nav-links">
    <li><a href={`/${lang}`}>{t('nav.home')}</a></li>
    <li><a href={`/${lang}/blog`}>{t('nav.blog')}</a></li>
    <li><a href={`/${lang}/categories`}>{t('nav.categories')}</a></li>
    <li><a href={`/${lang}/projects`}>{t('nav.projects')}</a></li>
    <li><a href="https://discord.gg/24CskUbuuB" target="_blank" rel="noopener noreferrer" class="external-link">{t('nav.join')}</a></li>
  </ul>
  <LanguageSwitcher currentLang={lang} currentPath={path} />
</nav>

<style>
  .navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    background: white;
  }

  .logo {
    display: block;
  }

  .logo img {
    display: block;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-links a {
    color: #333;
    text-decoration: none;
    font-size: 1rem;
    transition: color 0.2s ease;
  }

  .nav-links a:hover {
    color: #666;
  }

  .external-link {
    background: #f5f5f5;
    padding: 0.5rem 1rem;
    border-radius: 4px;
  }

  .external-link:hover {
    background: #e5e5e5;
  }

  @media (max-width: 768px) {
    .navbar {
      flex-direction: column;
      padding: 1rem;
    }

    .nav-links {
      flex-direction: column;
      gap: 1rem;
      margin-top: 1rem;
      text-align: center;
    }

    .external-link {
      display: inline-block;
    }
  }
</style> 