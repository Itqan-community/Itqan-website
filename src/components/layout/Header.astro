---
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import LanguageSwitcher from '../ui/LanguageSwitcher.astro';

interface Props {
  lang: 'ar' | 'en';
  path: string;
}

const { lang, path } = Astro.props;
const t = useTranslations(lang);
---

<header class="site-header">
  <nav class="nav">
    <a href="https://discord.gg/24CskUbuuB" target="_blank" rel="noopener">{t('nav.join')}</a>
    <a href={`/${lang}/blog`}>{t('nav.blog')}</a>
    <a href={`/${lang}/categories`}>{t('nav.categories')}</a>
    <a href={`/${lang}/projects`}>{t('nav.projects')}</a>
    <a href={`/${lang}`}>{t('nav.home')}</a>
    <a href={`/${lang}`}><img src="https://framerusercontent.com/images/q9CMuIWB9ZOelP0bKqU7M2MIyi4.svg" alt="Itqan" width="120" height="32" loading="eager" /></a>
    <LanguageSwitcher lang={lang} path={path} />
  </nav>
</header>

<style>
  .site-header {
    position: sticky;
    top: 0;
    z-index: 100;
    background-color: var(--color-background);
    border-bottom: 1px solid var(--color-border);
  }

  .nav {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    max-width: var(--container-width);
    margin: 0 auto;
  }

  .nav a {
    color: var(--color-text);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .nav a:hover {
    color: var(--color-primary);
  }

  .nav img {
    height: 32px;
    width: auto;
  }
</style> 