---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import { languages } from '../../i18n/ui';

export function getStaticPaths() {
  return Object.keys(languages).map(lang => ({ params: { lang } }));
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<BaseLayout lang={lang} path={Astro.url.pathname}>
  <div id="main">
    <nav>
      <a href="https://discord.gg/24CskUbuuB" target="_blank" rel="noopener">{t('nav.join')}</a>
      <a href={`/${lang}/blog`}>{t('nav.blog')}</a>
      <a href={`/${lang}/categories`}>{t('nav.categories')}</a>
      <a href={`/${lang}/projects`}>{t('nav.projects')}</a>
      <a href={`/${lang}`}>{t('nav.home')}</a>
      <a href={`/${lang}`}><img src="https://framerusercontent.com/images/q9CMuIWB9ZOelP0bKqU7M2MIyi4.svg" alt="Itqan" /></a>
    </nav>

    <main>
      <section id="hero">
        <h1>{t('home.hero.title')}</h1>
        <p>{t('home.hero.subtitle1')}</p>
        <p>{t('home.hero.subtitle2')}</p>
        <a href="https://discord.gg/24CskUbuuB" target="_blank" rel="noopener">{t('nav.join')}</a>
      </section>

      <section id="projects">
        <h2>{t('home.projects.title')}</h2>
        <p>{t('home.projects.subtitle')}</p>
        
        <div class="projects-grid">
          <a href={`/${lang}/projects/quran-apps-directory`}>
            <h3>{t('home.projects.directory.title')}</h3>
            <span>{t('home.projects.directory.status')}</span>
          </a>

          <a href={`/${lang}/projects/elevating-quranic-apps-search-experience`}>
            <h3>{t('home.projects.search.title')}</h3>
            <span>{t('home.projects.search.status')}</span>
          </a>
        </div>

        <a href={`/${lang}/projects`}>{t('home.projects.explore')}</a>
      </section>

      <section id="resources">
        <h2>{t('home.resources.title')}</h2>
        <p>{t('home.resources.subtitle')}</p>

        <div class="resources-grid">
          <a href={`/${lang}/categories/mushaf-fonts`}>
            <h3>{t('home.resources.fonts.title')}</h3>
            <p>{t('home.resources.fonts.desc')}</p>
          </a>

          <a href={`/${lang}/categories/recitation`}>
            <h3>{t('home.resources.recitation.title')}</h3>
            <p>{t('home.resources.recitation.desc')}</p>
          </a>

          <a href={`/${lang}/categories/digital-mushaf-layout`}>
            <h3>{t('home.resources.mushaf.title')}</h3>
            <p>{t('home.resources.mushaf.desc')}</p>
          </a>

          <a href={`/${lang}/categories/tafseer`}>
            <h3>{t('home.resources.tafseer.title')}</h3>
            <p>{t('home.resources.tafseer.desc')}</p>
          </a>
        </div>
      </section>

      <section id="faqs">
        <h2>{t('home.faq.title')}</h2>
        <h3>{t('home.faq.subtitle')}</h3>

        <div class="faq-list">
          <details>
            <summary>{t('home.faq.q1')}</summary>
            <p>{t('home.faq.a1')}</p>
          </details>

          <details>
            <summary>{t('home.faq.q2')}</summary>
            <p>{t('home.faq.a2')}</p>
          </details>

          <details>
            <summary>{t('home.faq.q3')}</summary>
            <p>{t('home.faq.a3')}</p>
          </details>
        </div>
      </section>

      <section id="benefits">
        <h2>{t('home.benefits.title')}</h2>
        <h3>{t('home.benefits.subtitle')}</h3>

        <ul>
          <li>{t('home.benefits.list1')}</li>
          <li>{t('home.benefits.list2')}</li>
          <li>{t('home.benefits.list3')}</li>
          <li>{t('home.benefits.list4')}</li>
          <li>{t('home.benefits.list5')}</li>
          <li>{t('home.benefits.list6')}</li>
        </ul>

        <a href="https://discord.gg/24CskUbuuB">{t('nav.join')}</a>
      </section>

      <footer>
        <a href="https://discord.gg/24CskUbuuB" target="_blank" rel="noopener">
          <h2>{t('home.footer.title')}</h2>
        </a>

        <div>
          <a href={`/${lang}`}><img src="https://framerusercontent.com/images/q9CMuIWB9ZOelP0bKqU7M2MIyi4.svg" alt="Itqan" /></a>
          <p>{t('home.footer.copyright')}</p>
          <img src="https://framerusercontent.com/images/CsZIzajHrpQyJNg0p8n5HNQ.png" alt="" />
        </div>
      </footer>
    </main>
  </div>
</BaseLayout>

<style>
  #main {
    min-height: 100vh;
  }

  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    background: white;
  }

  nav a {
    color: #333;
    text-decoration: none;
    font-size: 1rem;
    transition: color 0.2s ease;
  }

  nav a:hover {
    color: #666;
  }

  main {
    padding: 2rem;
  }

  #hero {
    text-align: center;
    padding: 4rem 2rem;
  }

  #hero h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  #hero p {
    font-size: 1.2rem;
    color: #666;
    margin-bottom: 0.5rem;
  }

  #hero a {
    display: inline-block;
    background: #f5f5f5;
    padding: 0.8rem 1.5rem;
    border-radius: 4px;
    text-decoration: none;
    color: #333;
    margin-top: 2rem;
  }

  #hero a:hover {
    background: #e5e5e5;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin: 2rem 0;
  }

  .projects-grid a {
    background: #f5f5f5;
    padding: 2rem;
    border-radius: 8px;
    text-decoration: none;
    color: #333;
  }

  .projects-grid h3 {
    margin-bottom: 1rem;
  }

  .projects-grid span {
    display: inline-block;
    background: #e5e5e5;
    padding: 0.3rem 0.8rem;
    border-radius: 4px;
    font-size: 0.9rem;
  }

  .resources-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin: 2rem 0;
  }

  .resources-grid a {
    background: #f5f5f5;
    padding: 2rem;
    border-radius: 8px;
    text-decoration: none;
    color: #333;
  }

  .resources-grid h3 {
    margin-bottom: 1rem;
  }

  .resources-grid p {
    color: #666;
    font-size: 0.9rem;
  }

  #faqs {
    margin: 4rem 0;
  }

  .faq-list {
    margin-top: 2rem;
  }

  details {
    margin-bottom: 1rem;
    padding: 1rem;
    background: #f5f5f5;
    border-radius: 4px;
  }

  summary {
    cursor: pointer;
    font-weight: bold;
  }

  #benefits {
    text-align: center;
    margin: 4rem 0;
  }

  #benefits ul {
    list-style: none;
    padding: 0;
    margin: 2rem 0;
  }

  #benefits li {
    margin: 1rem 0;
    color: #666;
  }

  #benefits a {
    display: inline-block;
    background: #f5f5f5;
    padding: 0.8rem 1.5rem;
    border-radius: 4px;
    text-decoration: none;
    color: #333;
  }

  footer {
    text-align: center;
    padding: 4rem 2rem;
    background: #f5f5f5;
  }

  footer a {
    text-decoration: none;
    color: #333;
  }

  footer h2 {
    margin-bottom: 2rem;
  }

  footer div {
    margin-top: 2rem;
  }

  footer p {
    color: #666;
    margin: 1rem 0;
  }

  @media (max-width: 768px) {
    nav {
      flex-direction: column;
      gap: 1rem;
    }

    #hero h1 {
      font-size: 2rem;
    }

    .projects-grid,
    .resources-grid {
      grid-template-columns: 1fr;
    }
  }
</style> 