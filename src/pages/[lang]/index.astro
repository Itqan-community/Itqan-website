---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import { languages } from '../../i18n/ui';

export function getStaticPaths() {
  return Object.keys(languages).map(lang => ({ params: { lang } }));
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<BaseLayout lang={lang} path={Astro.url.pathname}>
  <div class="container">
    <nav class="nav">
      <a href="https://discord.gg/24CskUbuuB" target="_blank" rel="noopener">{t('nav.join')}</a>
      <a href={`/${lang}/blog`}>{t('nav.blog')}</a>
      <a href={`/${lang}/categories`}>{t('nav.categories')}</a>
      <a href={`/${lang}/projects`}>{t('nav.projects')}</a>
      <a href={`/${lang}`}>{t('nav.home')}</a>
      <a href={`/${lang}`}><img src="https://framerusercontent.com/images/q9CMuIWB9ZOelP0bKqU7M2MIyi4.svg" alt="Itqan" /></a>
    </nav>

    <main>
      <section class="hero">
        <h1>{t('home.hero.title')}</h1>
        <p>{t('home.hero.subtitle1')}</p>
        <p>{t('home.hero.subtitle2')}</p>
        <a href="https://discord.gg/24CskUbuuB" target="_blank" rel="noopener" class="button">{t('nav.join')}</a>
      </section>

      <section class="section">
        <h2>{t('home.projects.title')}</h2>
        <p>{t('home.projects.subtitle')}</p>
        
        <div class="grid">
          <a href={`/${lang}/projects/quran-apps-directory`}>
            <h3>{t('home.projects.directory.title')}</h3>
            <span>{t('home.projects.directory.status')}</span>
          </a>

          <a href={`/${lang}/projects/elevating-quranic-apps-search-experience`}>
            <h3>{t('home.projects.search.title')}</h3>
            <span>{t('home.projects.search.status')}</span>
          </a>
        </div>

        <a href={`/${lang}/projects`} class="button">{t('home.projects.explore')}</a>
      </section>

      <section class="section">
        <h2>{t('home.resources.title')}</h2>
        <p>{t('home.resources.subtitle')}</p>

        <div class="grid">
          <a href={`/${lang}/categories/mushaf-fonts`}>
            <h3>{t('home.resources.fonts.title')}</h3>
            <p>{t('home.resources.fonts.desc')}</p>
          </a>

          <a href={`/${lang}/categories/recitation`}>
            <h3>{t('home.resources.recitation.title')}</h3>
            <p>{t('home.resources.recitation.desc')}</p>
          </a>

          <a href={`/${lang}/categories/digital-mushaf-layout`}>
            <h3>{t('home.resources.mushaf.title')}</h3>
            <p>{t('home.resources.mushaf.desc')}</p>
          </a>

          <a href={`/${lang}/categories/tafseer`}>
            <h3>{t('home.resources.tafseer.title')}</h3>
            <p>{t('home.resources.tafseer.desc')}</p>
          </a>
        </div>
      </section>

      <section class="section">
        <h2>{t('home.faq.title')}</h2>
        <h3>{t('home.faq.subtitle')}</h3>

        <div class="faq-list">
          <details>
            <summary>{t('home.faq.q1')}</summary>
            <p>{t('home.faq.a1')}</p>
          </details>

          <details>
            <summary>{t('home.faq.q2')}</summary>
            <p>{t('home.faq.a2')}</p>
          </details>

          <details>
            <summary>{t('home.faq.q3')}</summary>
            <p>{t('home.faq.a3')}</p>
          </details>
        </div>
      </section>

      <section class="section">
        <h2>{t('home.benefits.title')}</h2>
        <h3>{t('home.benefits.subtitle')}</h3>

        <ul>
          <li>{t('home.benefits.list1')}</li>
          <li>{t('home.benefits.list2')}</li>
          <li>{t('home.benefits.list3')}</li>
          <li>{t('home.benefits.list4')}</li>
          <li>{t('home.benefits.list5')}</li>
          <li>{t('home.benefits.list6')}</li>
        </ul>

        <a href="https://discord.gg/24CskUbuuB" class="button">{t('nav.join')}</a>
      </section>

      <footer class="section">
        <a href="https://discord.gg/24CskUbuuB" target="_blank" rel="noopener">
          <h2>{t('home.footer.title')}</h2>
        </a>

        <div>
          <a href={`/${lang}`}><img src="https://framerusercontent.com/images/q9CMuIWB9ZOelP0bKqU7M2MIyi4.svg" alt="Itqan" /></a>
          <p>{t('home.footer.copyright')}</p>
          <img src="https://framerusercontent.com/images/CsZIzajHrpQyJNg0p8n5HNQ.png" alt="" />
        </div>
      </footer>
    </main>
  </div>
</BaseLayout>

<style>
  .faq-list {
    margin: 2rem 0;
  }

  .faq-list details {
    margin-bottom: 1rem;
  }

  .faq-list summary {
    cursor: pointer;
    font-weight: 500;
    padding: 0.5rem 0;
  }

  .faq-list p {
    margin-top: 0.5rem;
    padding-left: 1rem;
  }

  footer {
    text-align: center;
  }

  footer div {
    margin-top: 2rem;
  }

  footer img {
    max-width: 200px;
    height: auto;
  }
</style> 